{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "lib": [
      "ES6",
      "DOM"
    ]
  },
  "include": [
    "js/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
